{
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "apphosting": {
    "backends": {
      "kidsartoon": {
        "env": {
          "GOOGLE_NODE_RUN_SCRIPTS": "" // 保持这个关键的绕过脚本
        }
      }
    }
  },
  "hosting": {
    "public": "client/dist",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  }
}